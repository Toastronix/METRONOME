<body>
    <div class="container">
        <h1>METRONOME</h1>

        <div class="visualization" id="visualization">
            <!-- Beat dots will be generated here -->
        </div>

        <div class="controls">
            <div class="control-group">
                <label for="tempo">Tempo (BPM)</label>
                <div class="input-display">
                    <input type="range" id="tempo" min="40" max="240" value="120">
                    <div class="value-display" id="tempoValue">120</div>
                </div>
            </div>

            <div class="control-group">
                <label for="timeSignature">Time Signature</label>
                <select id="timeSignature">
                    <option value="2">2/4</option>
                    <option value="3">3/4</option>
                    <option value="4" selected>4/4</option>
                    <option value="5">5/4</option>
                    <option value="6">6/8</option>
                    <option value="7">7/8</option>
                </select>
            </div>

            <button class="play-button" id="playButton">Play</button>
        </div>
    </div>

    <script>
        const tempoSlider = document.getElementById('tempo');
        const tempoValue = document.getElementById('tempoValue');
        const timeSignature = document.getElementById('timeSignature');
        const playButton = document.getElementById('playButton');
        const visualization = document.getElementById('visualization');

        let isPlaying = false;
        let currentBeat = 0;
        let intervalId = null;
        let audioContext = null;

        // Update tempo display
        tempoSlider.addEventListener('input', (e) => {
            tempoValue.textContent = e.target.value;
            if (isPlaying) {
                stopMetronome();
                startMetronome();
            }
        });

        // Update visualization when time signature changes
        timeSignature.addEventListener('change', () => {
            createVisualization();
            if (isPlaying) {
                currentBeat = 0;
            }
        });

        // Create beat dots based on time signature
        function createVisualization() {
            const beats = parseInt(timeSignature.value);
            visualization.innerHTML = '';
            
            for (let i = 0; i < beats; i++) {
                const dot = document.createElement('div');
                dot.className = i === 0 ? 'beat-dot accent' : 'beat-dot';
                dot.dataset.beat = i;
                visualization.appendChild(dot);
            }
        }

        // Initialize visualization
        createVisualization();

        // Play/Stop button
        playButton.addEventListener('click', () => {
            if (isPlaying) {
                stopMetronome();
            } else {
                startMetronome();
            }
        });

        function startMetronome() {
            isPlaying = true;
            playButton.textContent = 'Stop';
            playButton.classList.add('playing');
            currentBeat = 0;

            // Initialize audio context
            if (!audioContext) {
                audioContext = new (window.AudioContext || window.webkitAudioContext)();
            }

            const tempo = parseInt(tempoSlider.value);
            const interval = (60 / tempo) * 1000; // Convert BPM to milliseconds

            // Play first beat immediately
            playBeat();

            // Set up interval for subsequent beats
            intervalId = setInterval(() => {
                playBeat();
            }, interval);
        }

        function stopMetronome() {
            isPlaying = false;
            playButton.textContent = 'Play';
            playButton.classList.remove('playing');
            
            if (intervalId) {
                clearInterval(intervalId);
                intervalId = null;
            }

            // Clear all active beats
            document.querySelectorAll('.beat-dot').forEach(dot => {
                dot.classList.remove('active');
            });
        }

        function playBeat() {
            const beats = parseInt(timeSignature.value);
            const dots = document.querySelectorAll('.beat-dot');

            // Remove previous active state
            dots.forEach(dot => dot.classList.remove('active'));

            // Activate current beat
            if (dots[currentBeat]) {
                dots[currentBeat].classList.add('active');
            }

            // Play sound
            playSound(currentBeat === 0);

            // Move to next beat
            currentBeat = (currentBeat + 1) % beats;
        }

        function playSound(isAccent) {
            if (!audioContext) return;

            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();

            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);

            // Accent (first beat) is higher pitch and louder
            oscillator.frequency.value = isAccent ? 1000 : 800;
            gainNode.gain.value = isAccent ? 0.3 : 0.15;

            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.1);

            // Fade out
            gainNode.gain.exponentialRampToValueAtTime(
                0.01,
                audioContext.currentTime + 0.1
            );
        }
    </script>
</body>
</html>
